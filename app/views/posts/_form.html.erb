<% if flash[:post_errors]%>
<% flash[:post_errors].each do |error| %>
<%= error %>
    <% end %>
<% end %>


<%= form_for @post do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>

<%= f.label :content %><br>
<%= f.text_area :content %><br><br>

<%= f.label :blogger_id %><br>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>

<%= f.label :destination_id %><br>
<%= f.collection_select :destination_id, Destination.all, :id, :name %><br><br>

<%= f.submit %>
<% end%>